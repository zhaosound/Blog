{% extends 'base.html.twig' %}

{% block title  %}
    login
{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login_check') }}" method="post" role="form" class="form-control">
        <dl class="dl-form-vertical">
            <dt>
                <label for="login1">用户名</label>
            </dt>
            <dd>
                <input id="login1" placeholder="用户名"  name="_username" value={{ last_username }}>
            </dd>
            <dt>
                <label for="login2">密码</label>
            </dt>
            <dd>
                <input id="login2" type="password"  placeholder="密码" name="_password">
            </dd>
        </dl>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button type="submit">登陆</button>
    </form>
{% endblock %}